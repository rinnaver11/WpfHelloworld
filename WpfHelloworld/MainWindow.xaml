<Window x:Class="WpfHelloworld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHelloworld"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="loginTextBox" Width="150" Height="25" VerticalAlignment="Top" Margin="50" />
        <TextBox x:Name="passwdTextBox" Width="150" Height="25" VerticalAlignment="Top" Margin="80" />
        <Button x:Name ="loginButton" Content="Login" FontSize = "13" Width="80" Height = "30" VerticalAlignment="Top" Margin="120" Click ="LoginClick" />
    </Grid>
</Window>
